{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Projecten",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "short_title": {
      "type": "string",
      "required": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "slug": {
      "type": "uid"
    },
    "rank": {
      "type": "integer"
    },
    "background": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "required": true,
      "customField": "plugin::color-picker.color"
    },
    "long_title": {
      "type": "text",
      "required": true,
      "default": " "
    },
    "case_description": {
      "type": "text",
      "required": true
    },
    "roles": {
      "type": "customField",
      "options": [
        "Developer",
        "Front-end Developer",
        "Back-end Developer",
        "Designer"
      ],
      "customField": "plugin::multi-select.multi-select",
      "required": true
    },
    "story": {
      "type": "richtext",
      "required": true
    }
  }
}
